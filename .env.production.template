# KIRO ERP Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_REPLICATION_PASSWORD=your_secure_replication_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Elasticsearch Configuration
ELASTIC_PASSWORD=your_secure_elastic_password_here

# MinIO Configuration (S3-compatible storage)
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_secure_minio_secret_key_here

# Application Security
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_minimum_32_characters

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here

# API Configuration
NODE_ENV=production
API_PORT=4000
WEB_PORT=3000

# Database URLs (automatically constructed, but can be overridden)
DATABASE_URL=postgresql://kiro_user:${POSTGRES_PASSWORD}@postgres:5432/kiro_erp
TIMESCALE_URL=postgresql://kiro_user:${POSTGRES_PASSWORD}@timescaledb:5432/kiro_timeseries
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
ELASTICSEARCH_URL=http://elastic:${ELASTIC_PASSWORD}@elasticsearch:9200

# Object Storage
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=${MINIO_ACCESS_KEY}
S3_SECRET_KEY=${MINIO_SECRET_KEY}
S3_BUCKET_NAME=kiro-erp-storage

# Email Configuration (optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@kiro-erp.com

# External Services (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Cloudflare Configuration (optional)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=true

# Security
CORS_ORIGIN=https://app.kiro-erp.com,https://admin.kiro-erp.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
MAX_CONNECTIONS=200
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=60000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30