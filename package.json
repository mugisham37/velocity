{
  "name": "kiro-erp",
  "version": "1.0.0",
  "private": true,
  "description": "KIRO ERP - Next-generation Enterprise Resource Planning System",

  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "turbo test:e2e",
    "validate": "turbo validate",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.yml logs -f",
    "docker:clean": "docker-compose -f infrastructure/docker/docker-compose.yml down -v --remove-orphans",
    "docker:prod": "docker-compose -f infrastructure/docker/docker-compose.prod.yml up -d",
    "docker:performance": "docker-compose -f infrastructure/docker/docker-compose.performance.yml up -d",
    "deploy": "bash infrastructure/scripts/deploy.sh",
    "deploy:win": "powershell -ExecutionPolicy Bypass -File infrastructure/scripts/deploy.ps1",
    "deploy:prod": "bash infrastructure/scripts/deploy.sh -e production",
    "deploy:prod:win": "powershell -ExecutionPolicy Bypass -File infrastructure/scripts/deploy.ps1 -Environment production",
    "health": "node infrastructure/scripts/health-check.js",
    "setup": "node scripts/setup-dev.js",
    "setup:win": "powershell -ExecutionPolicy Bypass -File scripts/setup-dev.ps1",
    "prepare": "husky install",
    "postinstall": "pnpm run prepare"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "husky": "^8.0.3",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1"
}
