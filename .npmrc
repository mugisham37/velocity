# pnpm configuration for KIRO ERP
# Enable hoisting for better compatibility
hoist-pattern[]=*eslint*
hoist-pattern[]=*prettier*
hoist-pattern[]=*typescript*
hoist-pattern[]=*turbo*

# Strict peer dependencies
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Use hard links for better performance
link-workspace-packages=true

# Enable shamefully-hoist for compatibility with some packages
shamefully-hoist=false

# Store directory (optional - uses default)
# store-dir=~/.pnpm-store

# Registry configuration
registry=https://registry.npmjs.org/

# Lockfile settings
lockfile=true
prefer-frozen-lockfile=false

# Node modules structure
node-linker=isolated

# Enable workspace protocol
prefer-workspace-packages=true

# Performance optimizations
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Security
audit-level=moderate